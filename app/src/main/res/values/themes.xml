<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Neon Glass Theme (themeref.html) -->
  <style name="Theme.CarNavRelay" parent="Theme.Material3.DayNight.NoActionBar">
    <!-- Primary Colors (Purple/Cyan) -->
    <item name="colorPrimary">@color/aurora_purple</item>
    <item name="colorPrimaryVariant">@color/purple_dark</item>
    <item name="colorOnPrimary">@color/white_soft</item>
    <item name="colorPrimaryContainer">@color/aurora_gray</item>
    <item name="colorOnPrimaryContainer">@color/text_primary</item>

    <!-- Secondary Colors -->
    <item name="colorSecondary">@color/aurora_cyan</item>
    <item name="colorSecondaryVariant">@color/aurora_green</item>
    <item name="colorOnSecondary">@color/white_soft</item>
    <item name="colorSecondaryContainer">@color/aurora_gray</item>
    <item name="colorOnSecondaryContainer">@color/text_primary</item>

    <!-- Surface Colors -->
    <item name="colorSurface">@color/aurora_dark_gray</item>
    <item name="colorOnSurface">@color/text_primary</item>
    <item name="android:colorBackground">@color/aurora_black</item>
    <item name="colorOnBackground">@color/text_primary</item>

    <!-- Error Colors -->
    <item name="colorError">@color/aurora_error</item>
    <item name="colorOnError">@color/white_soft</item>

    <!-- System Bars -->
    <item name="android:statusBarColor">@color/aurora_black</item>
    <item name="android:navigationBarColor">@color/aurora_black</item>
    <item name="android:windowLightStatusBar">false</item>

    <!-- Shape Appearance -->
    <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.CarNavRelay.SmallComponent</item>
    <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.CarNavRelay.MediumComponent</item>
    <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.CarNavRelay.LargeComponent</item>

    <!-- Default Card Style -->
    <item name="materialCardViewStyle">@style/Widget.CarNavRelay.CardView</item>
    <item name="materialButtonStyle">@style/Widget.CarNavRelay.Button</item>
  </style>

  <!-- Shape Appearances -->
  <style name="ShapeAppearance.CarNavRelay.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSize">8dp</item>
  </style>

  <style name="ShapeAppearance.CarNavRelay.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSize">16dp</item>
  </style>

  <style name="ShapeAppearance.CarNavRelay.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSize">24dp</item>
  </style>

  <!-- Card Style -->
  <style name="Widget.CarNavRelay.CardView" parent="Widget.Material3.CardView.Elevated">
    <item name="cardElevation">8dp</item>
    <item name="cardCornerRadius">24dp</item>
    <item name="cardBackgroundColor">@color/aurora_glass</item>
    <item name="strokeColor">@color/glass_border</item>
    <item name="strokeWidth">1dp</item>
  </style>

  <!-- Button Styles -->
  <style name="Widget.CarNavRelay.Button" parent="Widget.Material3.Button">
    <item name="cornerRadius">16dp</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textStyle">bold</item>
    <item name="backgroundTint">@null</item>
    <item name="android:background">@drawable/aurora_button_ripple</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:scaleY">1.0</item>
    <item name="android:scaleX">1.0</item>
  </style>

  <!-- Translucent Theme for RelayActivity -->
  <style name="Theme.CarNavRelay.Translucent" parent="Theme.CarNavRelay">
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:backgroundDimEnabled">false</item>
  </style>

  <!-- NoDisplay Theme for SilentShareReceiverActivity -->
  <style name="Theme.CarNavRelay.NoDisplay" parent="Theme.CarNavRelay.Translucent">
    <item name="android:windowNoDisplay">true</item>
    <item name="android:windowDisablePreview">true</item>
  </style>
</resources>
