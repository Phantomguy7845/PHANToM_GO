<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="@drawable/aurora_card"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸš€ PHANToM GO"
            android:textColor="@color/aurora_cyan"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- URL Display -->
        <TextView
            android:id="@+id/txtOverlayUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/aurora_dark_gray"
            android:padding="12dp"
            android:text="Loading navigation..."
            android:textColor="@color/aurora_silver"
            android:textSize="12sp"
            android:maxLines="2"
            android:ellipsize="middle"
            android:layout_marginBottom="16dp" />

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnOpenNavigation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="ðŸ§­ OPEN"
                android:textColor="@android:color/white"
                android:background="@drawable/aurora_button_ripple"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnDismissOverlay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="âœ– DISMISS"
                android:textColor="@android:color/white"
                android:background="@drawable/aurora_button_ripple"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
