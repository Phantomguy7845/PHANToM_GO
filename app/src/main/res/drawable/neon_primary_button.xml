<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/aurora_blue">
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:startColor="@color/aurora_purple"
                android:endColor="@color/aurora_green"
                android:angle="135" />
            <stroke
                android:width="1dp"
                android:color="@color/purple_glow" />
            <corners android:radius="18dp" />
        </shape>
    </item>
</ripple>
