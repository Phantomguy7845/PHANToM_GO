<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="45"
                android:startColor="@color/aurora_purple"
                android:centerColor="@color/aurora_blue"
                android:endColor="@color/aurora_cyan"
                android:type="linear" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape>
            <gradient
                android:angle="135"
                android:startColor="@color/aurora_blue"
                android:centerColor="@color/aurora_cyan"
                android:endColor="@color/aurora_green"
                android:type="linear" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/aurora_gray" />
            <corners android:radius="16dp" />
        </shape>
    </item>
</selector>
